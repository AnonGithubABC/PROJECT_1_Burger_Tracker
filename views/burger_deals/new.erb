<form action="/burger_deals/new" method="POST" style="text-align:center">
<p>
  <label for="deal-name-input">Deal Name:</label>
  <input id="burger-name-input" type="text" name="deal_name" value="">


  <label for="burger-select">Burger:</label>
  <select class="burger_id" name="burger_id">
    <% @burgers.each do |burger| %>
            <option value=<%= burger.id %>><%=burger.eatery.name %> <%= burger.name %></option>
        <% end %>
  </select>

  <label for="day-select">Day:</label>
  <select class="day_id" name="day_id">
    <% @days.each do |day| %>
            <option value=<%= day.id %>><%= day.name.capitalize %></option>
        <% end %>
  </select>


  <input type="submit" name="" value="Add New Burger Deal">
</p>
</form>
